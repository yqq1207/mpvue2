@import "../../../assets/variables.styl"
.confirm
  font-size .28rem
  padding-bottom .94rem
  section
    background-color #fff
  &_address
    margin 0 0 .2rem .32rem
    font-size .28rem
    line-height .33rem
    &_hd
      padding .32rem .32rem .32rem 0
      color $mainColor2
      .edit
        color $subColor
    &_none
      padding-bottom .4rem
      .content
        text-align center
        margin 0 .8rem 0 .48rem
        padding .4rem 0
        color $subColor
        border 1px dashed $mainColor3
        border-radius .08rem
    &_bd
      padding-bottom .2rem
      &_title
        color $mainColor2
        min-width 1.4rem
        margin-right .24rem
      &_content
        color $mainColor0
    &_bb
      padding-bottom .32rem
  &_goods
    &_header
      color $mainColor2
      padding .32rem .32rem .1rem .32rem
      line-height .29rem
    &_content
      padding .32rem 0 .24rem 0
      display flex
      margin-left .32rem
      .pic
        width 2.2rem
        height 2.2rem
        object-fit cover
        margin-right .18rem
      .info
        display flex
        flex-direction column
        justify-content space-between
        width 4.48rem
        &_title
          overflow hidden
          max-height .8rem
          font-size .28rem
          margin-bottom .16rem
          line-height .4rem
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        &_count
          font-size .24rem
          line-height .28rem
          color $mainColor2
          padding-top .08rem
        &_tips
          color $mainColor2
          font-size .22rem
          line-height .26rem
          margin-top .08rem
          &_abroad
            font-size .16rem
            padding .015rem .065rem
            border-radius .05rem
            color #fff
            background-color $subColor
            margin-right .05rem
            vertical-align top
        &_status
          color $subColor
          &_value
            padding 0 .18rem .08rem 0
          &_count
            line-height .33rem
            color $mainColor1
            margin-right .2rem
          &_discount
            color $mainColor2
            font-size .24rem
  &_order
    margin 0 0 .2rem 0
    padding .24rem .32rem
    &_express
      margin-bottom .12rem
    &_express,
    &_count
      .title
        color $mainColor2
      .content
        width 1.15rem
        display inline-block
      .value
        color $subColor
  .weui_cells:before,
  .weui_cells:after
    display none
  .weui_cell
    padding .32rem
    &:before
      display none
  .weui_switch
    &:checked
      border-color $subColor
      background-color $subColor
  &_vip
    background-color $whiteColor
    &_title
      color $mainColor
    &_hd
      display flex
      justify-content space-between
      padding .23rem .32rem .23rem 0
      margin 0 0 0 .32rem
      font-size .28rem
      color $subColor
  &_coupon
    background-color $whiteColor
    padding .23rem .32rem
    font-size .32rem
    color $mainColor0
    &_bd
      display flex
      justify-content space-between
    &_arrow
      &:after
        content ""
        display inline-block
        transform rotate(45deg)
        height 6px
        width 6px
        border-width 1px 1px 0 0
        border-color currentColor
        border-style solid
        position relative
        top -2px
        top -1px
    &--used
      color #4A4A4A
    &--able
      color currentColor
    &--none
      color $mainColor4
  &_commission
    font-size .28rem
    color $mainColor2
    margin .2rem 0 .9rem 0
    &_hd
      padding .32rem
      .rule
        color $subColor
    &_bd
      padding-bottom .32rem
      .title
        color $mainColor0
        font-size .32rem
        margin-bottom .08rem
  &_pay
    font-size .32rem
    background-color #fff
    position fixed
    bottom 0
    width 100%
    &_hd
      padding .22rem .24rem
      .title
        font-size .28rem
      .value
        color $subColor
    &_btn
      width 2.4rem
      background-color $mainColor
      color #fff
      line-height .94rem
      &:active
        background-color darken($mainColor,10%)
        color hsla(0,0%,100%,.6)
      .load3
        vertical-align text-top
    .disabled
      background-color rgba($mainColor,0.5)
      color hsla(0,0%,100%,.6)
