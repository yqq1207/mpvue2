@import "../../../assets/variables.styl"
.detail
  background rgba(246,246,246,1)
  padding-bottom 180rpx
  &_activityIcon
    position absolute
    z-index 3
    width 1.6rem
  &_hd
    position fixed
    top 0
    padding .18rem .32rem
    background-color $mainColor
    width 100%
    box-sizing border-box
    display flex
    justify-content space-between
    z-index 4
    &_context
      color #fff
      font-size .32rem
      .logo
        background url('https://static.paranoidsqd.com/images/goods/logo.png') no-repeat
        width .38rem
        height .38rem
        background-size contain
        margin-right .18rem
        vertical-align text-bottom
      .title
        line-height .6rem
    &_btn
      color #fff
      font-size .28rem
      padding .14rem .3rem
      line-height 1
      box-sizing border-box
      border 1px solid #FFFFFF
      border-radius 1rem
  &_video
    width 7.5rem
    height 4.2rem
    &_icon
      width 1.49rem
      height 1.49rem
      position absolute
      z-index 3
      padding 1.35rem 3rem
  &_activity
    	   width 100%
    	   height .6rem
    	   line-height .6rem
    	   color #FFFFFF
    	   font-size .24rem
    	   background #F46B6A
  &_img
    &_context
      position absolute
      width 7.5rem
      height 4.2rem
      background-color rgba(#000, 0.3)
      display flex
      align-items flex-end
      &_name
        color $whiteColor
        padding 0 .32rem .4rem
        font-size .44rem
        font-weight bold
    &_img
      width 7.5rem
      height 4.2rem
      object-fit cover
  &_banner
    height 750rpx
    background-color #000000
    &_img
      width 100%
      height 750rpx
      object-fit cover
  &_content
    background rgba(255,255,255,1)
    padding 24rpx 32rpx
    margin-bottom 20rpx
    height 359rpx
    &_td
      display flex
      justify-content flex-start
      align-items center
      margin .22rem 0 .27rem 0
      &_header
        width .88rem
        height .88rem
        border-radius 50%
        margin-right .2rem
        object-fit cover
      &_content
        &_title
          font-size .28rem
          color $mainColor1
          font-weight bold
        &_context
          font-size .24rem
          color $mainColor2
    &_title
      color $mainColor0
      font-size 32rpx
      line-height 45rpx
      margin-bottom 12rpx
      height 90rpx
      overflow hidden
    &_subtitle
      font-size 28rpx
      color $mainColor2
      line-height 40rpx
      height 80rpx
      overflow hidden
      margin-bottom 22rpx
     &_cells
    	  .weui_cells:before
    	   border-top 0
    	  .weui_cells:after
    	   	border-bottom none
      .weui_cells_access
      	margin-top 0
      	.weui_cell
      	 padding 0
      .weui_cell_ft
        color #F46B6A
        font-size .28rem
       .weui_cell_ft:after
        border-color #F46B6A
    &_share
      display flex
      justify-content space-between
      align-items center
      color $subColor
      &_context
        font-size .28rem
      &_iconl,
      &_icons
        font-size .48rem
      &_iconl
        margin-right .18rem
    &_hd
      display flex
      justify-content space-between
      margin-bottom .04rem
      color $mainColor
      align-items center
      .price
        font-size .32rem
        color $subColor
        &--now_i
          font-size .48rem
        &--discount1
          font-size 28rpx
          color $mainColor2
          margin-right 8rpx
          text-decoration line-through
        &--discount2
          font-size 28rpx
          color $mainColor2
        &--text
          font-size 28rpx
          font-weight 400
          color rgba(244,107,106,1)
          line-height 40rpx
      &_btn
        display flex
        justify-content space-between
        .icon-share,
        .icon-link
          height 48rpx
          width 48rpx
      .share
        font-size .28rem
        color $subColor
    &_cell
   	   margin-bottom 0.08rem
    	  .weui_cells:before
    	   border-top 0
    	  .weui_cells:after
    	   	border-bottom none
      .weui_cells
      	margin-top 0
      	.weui_cell
      	 padding 0 0 0 4.2rem
      .weui_cell_ft
        color #F46B6A
        font-size .28rem
       .weui_cell_ft:after
        border-color #F46B6A
    &_fd
      padding-top .14rem
      margin-top .1rem
      .abroad,
      .express,
      .agent
        font-size .22rem
        line-height .3rem
        color $mainColor2
        margin-top .1rem
        &_icon
          font-size .18rem
          padding .015rem .065rem
          border-radius .05rem
          color #fff
          background-color $subColor
          margin-right .05rem
          vertical-align middle
        &_arrow
          &:after
            content " "
            display inline-block
            transform rotate(45deg)
            height 6px
            width 6px
            border-width 1px 1px 0 0
            border-color currentColor
            border-style solid
            position relative
            top 4px
  &_details
    margin-top 20rpx
    background-color #fff
    &_title
      padding 24rpx
      font-size 28rpx
      color $mainColor2
      line-height 40rpx
    &_content
      width 7.5rem
      img
        width 7.5rem
        height auto
        display block
  &_inner
    &_hd
      background-color $whiteColor
      display flex
      justify-content space-between
      padding 0 1.09rem
      box-sizing border-box
      width 100%
      z-index 3
      &_tab
        font-size .28rem
        padding .22rem .22rem .2rem
        font-weight bold
        color $mainColor0
      .active
        color $mainColor
        border-bottom 2px solid $mainColor
    &_bd
      width 7.5rem
      background-color $whiteColor
      &_fixed
        margin-top .9rem
      img
        width 7.5rem
        height auto
        display block
  &_change
    visibility hidden
    padding .2rem
    background-color $whiteColor
    &_actived
      visibility visible
    &_hd
      color $whiteColor
      background-color $mainColor
      border-radius 1rem
      font-size .28rem
      padding .16rem .3rem
      line-height .28rem
  &_bar
    position fixed
    bottom 0
    z-index 2
    width 100%
    &_tips
      font-size .24rem
      line-height .33rem
      padding .12rem 0 .15rem 0
      color #fff
      &--coming
        background-color $subColor
      &--over
        background-color $subColor
      &--activity
        color $mainColor
        margin-left .21rem
    &_content
      height 88rpx
      width 100%
      &_icon
        width 270rpx
        background rgba(255,255,255,1)
        box-shadow 0 1rpx 0 0 rgba(0,0,0,0.08)
        filter blur(10rpx)
        font-size 48rpx
        margin 11rpx 0 10rpx 0
        line-height 67rpx
        color rgba(244,107,106,1)
        .icon-cart,
        .icon-home
          color $mainColor2
          display block
          font-size .48rem
          vertical-align middle
        .icon-home
          font-size .44rem
          margin-bottom .08rem
        .icon-cart
          position relative
          .counts
            font-size .18rem
            position absolute
            background-color $subColor
            color #fff
            line-height 1
            width .25rem
            height .25rem
            border-radius 50%
            right -.06rem
            top -.05rem
        &_context
          font-size 48rpx
          margin 11rpx 0 10rpx 0
          line-height 67rpx
          color rgba(244,107,106,1)
      &_btn
        width 480rpx
        background rgba(0,0,0,1)
        box-shadow 0 1rpx 0 0 rgba(0,0,0,0.08)
        filter blur(10rpx)
      &_btn2
        width 480rpx
        background rgba(0,0,0,0.5)
        box-shadow 0 1rpx 0 0 rgba(0,0,0,0.08)
        filter blur(10rpx)
        &_bought
          font-size 32rpx
          color rgba(255,255,255,1)
          line-height 45rpx
          margin 22rpx 0 21rpx 0
        &_disabled
          font-size 32rpx
          color rgba(255,255,255,1)
          line-height 45rpx
          margin 22rpx 0 21rpx 0
        .cart
          width 2.4rem
          background-color $mainColor
          box-shadow inset 0 1px 0 0 rgba(0,0,0,0.08)
          &:active
            color hsla(0,0%,100%,.6)
            background-color darken($mainColor,10%)
          &:active
            color hsla(0,0%,100%,.6)
            background-color darken(#098F94,10%)
        .coming
          color hsla(0,0%,100%,.6)
        .disabled
          width 4.8rem
          background-color $mainColor1
.mask
  &_bg
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    z-index 3
    background-color rgba(0, 0, 0, 0.6);
    display flex
    justify-content center
    align-items flex-end
  &_content
    background-color #fff
    width 100%
    padding .32rem
    box-sizing border-box
    &_hd
      display flex
      justify-content space-between
      padding 0 0 .32rem 0
      .item
        &_info
          width 100%
          display flex
          padding-bottom 32rpx
          border-bottom 1rpx solid rgba(234, 234, 234, 1)
          &_pic
            width 1.6rem
            height 1.6rem
            object-fit cover
            margin-right .24rem
          &_detail
            display flex
            flex-direction column
            font-size .24rem
            color $mainColor2
            .price
              color $subColor
              font-size .28rem
            .stock
              margin .12rem 0
        &_cancel
          &_btn
            position relative
            display inline-block
            transform rotate(45deg)
            right .1rem
            &:before, &:after
              content " "
              position absolute
              top 50%
              left 50%
              transform translate(-50%, -50%)
              background-color $mainColor2
            &:before
              width .4rem
              height .02rem
            &:after
              width .02rem
              height .4rem
    &_bd
      .item_spec       
        &_title
          color rgba(160,160,160,1)
          font-size 28rpx
          min-width 60rpx
        &_a
          display flex
          justify-content space-between
          height 40rpx
        &_b
          height 40rpx
          width 40rpx
          display flex
          border:1rpx rgba(234, 234, 234, 1) dashed
          align-items center
          justify-content center
          color #000
        &_c
          height 40rpx
          width 92rpx
          color rgba(35,35,35,1)
          font-size 28rpx
          text-align center
          line-height 40rpx
        &_d
          display flex
          border 1rpx rgba(234, 234, 234, 1) dashed
          align-items center
          justify-content center
          height 40rpx
          width 40rpx
          color #000
        .flex
          display flex
          flex-wrap wrap
        &_li
          display flex
          width 100%
          flex-wrap wrap
          flex-direction row
          padding-bottom 40rpx
          margin-bottom 20rpx
          border-bottom 1rpx solid rgba(234, 234, 234, 1)
          .value
            font-size 28rpx
            line-height 40rpx
            display flex
            align-items center
            justify-content center
            height 60rpx
            min-width 60rpx
            padding 12rpx 32rpx
            margin 32rpx 32rpx 0 0
            border-radius 8rpx
            background rgba(234,234,234,1)
            color rgba(35,35,35,1)
            box-sizing border-box
            &:last-child
              margin-right 0
          .sold-out.sold-out
            color $mainColor2
          .active.active
            color #fff
            background-color $subColor
      .count
        display flex
        justify-content space-between
        .disabled
          border 1px solid $mainColor4
          &:before, &:after
            background-color $mainColor4
        &_reduce
          position relative
          border 1px solid $mainColor2
          background-color transparent
          padding .02rem .145rem .02rem .14rem
          font-size .28rem
          &:before, &:after
            content " "
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-color $mainColor2
          &:before
            width .22rem
            height .02rem
        &_count
         display inline-block
         width .92rem
         text-align center
         font-size .28rem
         line-height .4rem
         color $mainColor0
         margin 0 .24rem
        &_add
          position relative
          border 1px solid $mainColor2
          background-color transparent
          padding .02rem .145rem .02rem .14rem
          font-size .28rem
          &:before, &:after
            content " "
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-color $mainColor2
          &:before
            width .22rem
            height .02rem
          &:after
            width .02rem
            height .22rem
    &_fd
      margin 40rpx 0
      .weui_btn
        font-size 32rpx
        font-weight 500
        height 88rpx
        background rgba(0,0,0,1)
        color rgba(255,255,255,1)
  &_scale
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(#000, 0.6)
    align-items center
    justify-content center
    z-index 4
    &_img
      width 7.5rem
      object-fit cover
      margin auto
      position absolute
      top 50%
      left 50%

.bigbang_icon.bigbang_icon
  width 1.35rem
.bigbang_btn.bigbang_btn
  width 6.15rem
