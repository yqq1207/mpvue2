@import "../../../assets/variables.styl"
.list
  font-size 28rpx
  line-height 33rpx
  &_tabs
    background-color $backColor
    display flex
    justify-content space-between
    padding 0 40rpx
    position fixed
    width 100%
    box-sizing border-box
    top 0
    .active
      color $subColor 
      border-bottom 2px solid $subColor
    &_tab
      color $subColor2
      padding .24rem 0
    &_bd
      position absolute
      width 1.26rem
      bottom 3px
      left .05rem
      &:before
        content ''
        position absolute
        width 100%
        height 1px
        border-bottom 2px solid $mainColor
  &_orders
    margin-top 90rpx
    &_item
      margin 0 40rpx
      background-color #fff
      &_header
        line-height 40rpx
        height 40rpx
        color rgba(160,160,160,1)
        font-weight 500
        margin-top 60rpx
        border-bottom 1px solid $subColor2
      &_content
        height 194rpx
        display flex
        border-bottom 1px solid $subColor2
        .pic
          width 180rpx
          height 180rpx
          object-fit cover
          margin 30rpx 20rpx 30rpx 0
          border 1px solid $subColor1
        .info
          display flex
          flex-direction column
          justify-content space-between
          width 516rpx
          height 134rpx
          margin 30rpx 0
          &_title
            overflow hidden
            max-height .8rem
            font-size .28rem
            margin-bottom .16rem
            line-height .4rem
            text-overflow ellipsis
            display -webkit-box
            -webkit-line-clamp 2
            -webkit-box-orient vertical
          &_count
            font-size .24rem
            line-height .28rem
            color $mainColor3
            padding-top .08rem
          .product
            margin-top 50rpx
            display flex
            flex-direction row
            justify-content space-between
            .count
              width 210rpx
              height 35rpx
              color #fff
              font-weight 500
              text-align center
              font-size 26rpx
              line-height 35rpx
              border-radius 1em
              background #000
            .count2
              width 140rpx
              height 35rpx
              color #fff
              font-weight 500
              text-align center
              font-size 26rpx
              line-height 35rpx
              border-radius 1em
              background #000
            .amount
              font-size 28rpx
              font-weight 400
              color rgba(244,107,106,1)
      &_status
        height 88rpx
        display flex
        justify-content space-between
        line-height 88rpx
        &_right
          display flex
          flex-direction row